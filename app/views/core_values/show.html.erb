<% content_for :title, @core_value.name %>

<div class="page-container">
  <div class="page-header">
    <div class="breadcrumb" style="margin-bottom: 16px;">
      <%= link_to "Core Values", core_values_path, style: "color: #007cba; text-decoration: none;" %> 
      <span style="color: #ccc; margin: 0 8px;">></span>
      <span style="color: #666;"><%= @core_value.name %></span>
    </div>
    
    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 24px;">
      <h1 style="margin: 0; color: #333; font-size: 2.5em;"><%= @core_value.name %></h1>
      <div class="actions" style="display: flex; gap: 12px;">
        <%= link_to edit_core_value_path(@core_value), 
            class: "btn btn-secondary",
            style: "background: #6c757d; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; display: flex; align-items: center; gap: 8px;" do %>
          <span class="material-symbols-outlined" style="font-size: 18px;">edit</span>
          Edit
        <% end %>
        <%= link_to core_value_path(@core_value), method: :delete, 
            confirm: "Are you sure you want to delete this core value?",
            class: "btn btn-danger",
            style: "background: #dc3545; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; display: flex; align-items: center; gap: 8px;" do %>
          <span class="material-symbols-outlined" style="font-size: 18px;">delete</span>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <div class="core-value-content">
    <% if @core_value.description.present? %>
      <div class="description-section" style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border: 1px solid #e0e7ef;">
        <h3 style="margin: 0 0 16px 0; color: #007cba; display: flex; align-items: center; gap: 8px;">
          <span class="material-symbols-outlined">description</span>
          Description
        </h3>
        <p style="color: #666; margin: 0; line-height: 1.6; font-size: 1.1em;"><%= @core_value.description %></p>
      </div>
    <% end %>
    
    <% if @core_value.examples.any? %>
      <div class="examples-section" style="background: white; border-radius: 12px; padding: 24px; margin-bottom: 24px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border: 1px solid #e0e7ef;">
        <h3 style="margin: 0 0 16px 0; color: #007cba; display: flex; align-items: center; gap: 8px;">
          <span class="material-symbols-outlined">lightbulb</span>
          Examples
        </h3>
        <ul style="margin: 0; padding: 0; list-style: none;">
          <% @core_value.examples.each do |example| %>
            <li style="background: #f8f9fa; padding: 12px 16px; margin-bottom: 8px; border-radius: 8px; border-left: 4px solid #007cba; color: #666; line-height: 1.4;">
              <%= example %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <% if @core_value.description.blank? && @core_value.examples.empty? %>
      <div class="empty-content" style="background: white; border-radius: 12px; padding: 48px 24px; text-align: center; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border: 1px solid #e0e7ef;">
        <span class="material-symbols-outlined" style="font-size: 48px; color: #ccc; margin-bottom: 16px;">edit_note</span>
        <h3 style="margin: 0 0 12px 0; color: #666;">Add More Details</h3>
        <p style="color: #999; margin-bottom: 24px;">Enhance this core value with a description and examples to make it more meaningful.</p>
        <%= link_to "Edit Core Value", edit_core_value_path(@core_value), 
            style: "background: #007cba; color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; display: inline-block;" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .btn {
    border: none;
    cursor: pointer;
    font-size: 1em;
    transition: all 0.2s;
  }
  
  .btn:hover {
    transform: translateY(-1px);
    opacity: 0.9;
  }
  
  .btn-secondary:hover {
    box-shadow: 0 4px 12px rgba(108,117,125,0.3);
  }
  
  .btn-danger:hover {
    box-shadow: 0 4px 12px rgba(220,53,69,0.3);
  }
  
  @media (max-width: 768px) {
    .page-container {
      padding: 16px;
    }
    
    .page-header > div:first-child {
      flex-direction: column !important;
      align-items: flex-start !important;
    }
    
    .actions {
      margin-top: 16px !important;
      width: 100%;
    }
    
    .btn {
      flex: 1;
      justify-content: center !important;
    }
    
    .description-section, .examples-section, .empty-content {
      padding: 20px !important;
    }
  }
</style>
